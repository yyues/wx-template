.my-tabs {
  display: flex;
}
.my-tabs .van-tab {
  flex: 0 0 auto;
  padding: 0 32rpx;
  text-align: center;
  min-width: 100rpx;
}
.my-tabs .van-tabs__nav {
  background-color: #f9f9f9;
}
.my-tabs .van-tabs__content {
  padding-top: 108rpx;
  flex: 1;
}
.wrapper {
  position: relative;
  min-height: calc(100vh - 500rpx);
}
.add-info {
  position: absolute;
  bottom: 10px;
  right: 40rpx;
  height: 120rpx;
  width: 120rpx;
  z-index: 999;
}
