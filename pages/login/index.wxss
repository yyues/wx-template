.login-wrapper {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}
.login-wrapper .nav-title {
  color: #24271E;
  letter-spacing: 2rpx;
}
.login-wrapper .content {
  padding-top: 5vh;
}
.login-wrapper .content .header {
  padding: 0 60rpx;
}
.login-wrapper .content .header text {
  font-size: 40rpx;
  line-height: 64rpx;
  color: #24271E;
  letter-spacing: 1rpx;
}
.login-wrapper .content .header .strong {
  margin-left: 20rpx;
  font-weight: 700;
}
.login-wrapper .content .desc {
  padding: 0 60rpx;
  margin-top: 20rpx;
}
.login-wrapper .content .desc text {
  font-size: 28rpx;
  color: #94a3b8;
}
.login-wrapper .content .image {
  padding: 0 60rpx;
  margin-top: 2vh;
}
.login-wrapper .content .image image {
  object-fit: cover;
  width: 100%;
  height: 756rpx;
  border-radius: 10rpx;
}
.login-wrapper .content .operation {
  padding: 0 60rpx;
  margin-top: 7vh;
}
.login-wrapper .content .operation .my-submit {
  width: 100%;
  min-width: 240rpx;
  border-radius: 12rpx;
  letter-spacing: 0.7rpx;
}
