<view class="login-wrapper">
  <view class="content">
    <view class="header">
      <text>欢迎使用</text>
      <text class="strong">{{appName}}</text>
    </view>
    <view class="desc">
      <text>期待和你的每一次相遇！</text>
    </view>
    <view class="image">
      <!--  -->
      <image src="{{login_bg}}"></image>
    </view>
    <view class="operation">
      <van-button color="#5B67CA" custom-class="my-submit" bindtap="bindGetUserInfo">授权微信头像、昵称</van-button>
    </view>
  </view>
  <van-toast id="van-toast" />
</view>