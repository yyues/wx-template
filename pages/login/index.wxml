<view class="login-wrapper">
  <!-- 导航栏 -->
  <van-nav-bar border="{{false}}" fixed placeholder="{{true}}" custom-style="background: #ffffff00">
    <view slot="left" class="nav-left">
      <image src="../../images/action/home.png" bindtap="onClickLeft"></image>
      <text>账户登录</text>
    </view>
  </van-nav-bar>
  <view class="content">
    <view class="header">
      <text>欢迎使用</text>
      <text class="strong">{{appName}}</text>
    </view>
    <view class="desc">
      <text>期待和你的每一次相遇！</text>
    </view>
    <view class="image">
      <!--  -->
      <image src="{{login_bg}}"></image>
    </view>
    <view class="operation">
      <van-button color="#5B67CA" custom-class="my-submit" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权微信头像、昵称</van-button>
    </view>
  </view>
  <van-toast id="van-toast" />
</view>