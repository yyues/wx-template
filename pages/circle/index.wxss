.add-part,
.edit-part {
  height: calc(100vh - 180rpx);
}
.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page-wrapper .loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-part {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.add-part .my-upload {
  margin-top: 14vh;
}
.my-input {
  border: 1px solid #eee;
}
.operation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 300rpx 0;
}
.my-submit.van-button {
  min-width: 240rpx;
  letter-spacing: 4rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
}
.my-submit .van-field__placeholder {
  color: red;
}
.tips {
  margin-top: 18rpx;
}
.tips text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #a1a1aa;
}
.part {
  margin-bottom: 32rpx;
  transition: height 0.28s;
}
.part .title {
  padding: 0rpx 32rpx;
  background-color: #fff;
}
.part .title text {
  color: #8a8ab2;
  font-family: Roboto;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 32px;
  letter-spacing: 0px;
  text-align: left;
}
.part .content {
  padding: 16rpx 32rpx;
}
.config {
  margin-bottom: 32rpx;
  transition: height 0.28s;
}
.config .title {
  padding: 0rpx 32rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.config .title text {
  color: #8a8ab2;
  font-family: Roboto;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 32px;
  letter-spacing: 0px;
  text-align: left;
}
.flex {
  display: flex;
  align-items: center;
}
.flex .title {
  min-width: 180rpx;
  padding-right: 10rpx !important;
}
.flex .input {
  flex: 1;
}
