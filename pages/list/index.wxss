.wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.wrapper.bg {
  background-color: #f2f3f5;
}
.wrapper .loading,
.wrapper .empty {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapper .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}
.wrapper .content .header .total {
  padding: 40rpx 0 60rpx 0;
  background-color: #5b67ca;
  padding-left: 40rpx;
}
.wrapper .content .header .total text {
  color: white;
  font-size: 28rpx;
  line-height: 44rpx;
}
.wrapper .content .detail {
  flex: 1;
  padding: 20rpx 24rpx;
}
.wrapper .content .add {
  background-color: #5b67ca;
  position: absolute;
  padding: 20rpx;
  border-radius: 50%;
  right: 90rpx;
  bottom: 180rpx;
}
.wrapper .my-message .van-empty__image {
  width: 198px;
  margin-bottom: 20rpx;
}
.wrapper .bg-color {
  background-color: #f2f3f5;
}
.wrapper .todo-type {
  margin: 0 24rpx;
  display: flex;
  padding: 6rpx;
  border-radius: 32rpx;
  background-color: #5b67ca;
}
.wrapper .todo-type .type-item {
  flex: 1;
  text-align: center;
  padding: 4rpx 0;
  border-radius: 32rpx;
  cursor: pointer;
}
.wrapper .todo-type .type-item text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: white;
}
.wrapper .todo-type .todo-select {
  background-color: #fff;
}
.wrapper .todo-type .todo-select text {
  color: #5b67ca;
}
