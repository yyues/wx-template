.detail-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.detail-page .wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.detail-page .wrapper .loading {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.detail-page .wrapper .content {
  display: flex;
  flex-direction: column;
}
.detail-page .wrapper .content .error {
  flex: 1;
}
.detail-page .wrapper .content .detail {
  padding: 20rpx 24rpx;
}
.detail-page .wrapper .content .detail .header {
  padding: 20rpx 0;
}
.detail-page .wrapper .content .detail .header .content {
  margin-bottom: 10rpx;
}
.detail-page .wrapper .content .detail .header .content text {
  font-size: 40rpx;
  line-height: 64rpx;
  color: #171725;
  font-weight: 700;
}
.detail-page .wrapper .content .detail .header .desc text {
  font-size: 28rpx;
  line-height: 44rpx;
  font-weight: 400;
  color: #78828a;
}
.detail-page .wrapper .content .detail .more {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 2rpx solid #5b67ca;
  margin: 10rpx 0;
  padding: 20rpx 0;
}
.detail-page .wrapper .content .detail .more .author image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
