.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page .loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page .content {
  position: relative;
  margin: 20rpx 24rpx;
  padding: 0 20rpx;
}
.page .content .desc text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #94a3b8;
}
.page .content .header {
  border-radius: 8rpx;
}
.page .content .header .img image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}
.page .content .header .user_name {
  margin: 10rpx 0;
}
.page .content .header .user_name text {
  color: #24271e;
  font-size: 36rpx;
  line-height: 54rpx;
}
.page .content .image {
  margin: 20rpx 0;
}
.page .content .image image {
  border-radius: 8rpx;
  width: 100%;
  height: 800rpx;
}
.page .content .operation {
  margin-top: 4vh;
}
.page .content .operation .my-submit {
  width: 100%;
  min-width: 240rpx;
  border-radius: 12rpx;
  letter-spacing: 0.7rpx;
}
