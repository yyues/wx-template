<view class="user-page" style="--cell-group-inset-border-radius:16rpx">
  <!-- 用户卡片 -->
  <view class="wrapper">
    <view class="card">
      <view class="card__header">
        <view class="avatar">
          <image src="{{avatar_url}}" mode="" />
        </view>
        <view class="edit-icon">
          <text>{{'编辑资料'}}</text>
        </view>
      </view>
      <view class="card__content">
        <view class="username">
          <text>{{username}}</text>
        </view>
      </view>
      <view class="card__desc van-ellipsis">
        <text>天啦撸，什么都没有，可能是神秘的外星人</text>
      </view>
      <view class="card__footer" wx:if="{{true}}">
        <view class="item">
          <view class="number">
            <text>0</text>
          </view>
          <view class="type">
            <text>待办</text>
          </view>
        </view>
        <view class="item">
          <view class="number">
            <text>0</text>
          </view>
          <view class="type">
            <text>圈子</text>
          </view>
        </view>
        <view class="item">
          <view class="number">
            <text>0</text>
          </view>
          <view class="type">
            <text>消息</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="action">
    <van-cell-group border="{{false}}" inset >
      <van-cell title="我的待办" is-link link-type="navigateTo" url="/pages/list/index?key=my-todo&from=user&type=add">
        <image slot="icon" src="../../images/home/all.png" mode="" />
      </van-cell>
      <van-cell title="我的圈子" is-link link-type="navigateTo" url="/pages/list/index?key=my-circle&from=user&type=add">
        <image slot="icon" src="../../images/home/many.png" mode="" />
      </van-cell>
      <!-- <van-cell title="我的消息" border="{{false}}" is-link link-type="navigateTo" url="/pages/list/index?key=my-message&from=user&type=add" /> -->
      <van-cell title="请喝一杯coffee" is-link>
        <image slot="icon" src="../../images/home/coffee.png" mode="" />
      </van-cell>
      <van-cell title="关于开发者" is-link border="{{false}}">
        <image slot="icon" src="../../images/home/develop.png" mode="" />
      </van-cell>
    </van-cell-group>
  </view>
  <view class="action">
    <van-cell-group border="{{false}}" inset>

      <van-cell title="项目说明" is-link border="{{false}}">
        <image slot="icon" src="../../images/home/mark.png" mode="" />
      </van-cell>
      <van-cell title="未来功能" is-link>
        <image slot="icon" src="../../images/home/feature.png" mode="" />
      </van-cell>
    </van-cell-group>
  </view>
  <van-toast id="van-toast" />
  <van-dialog id="van-dialog" />
</view>