.user-page .bg {
  width: 100%;
  height: 400rpx;
  background-color: #7174e2;
  margin-top: -180rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: flex-end;
  padding: 0 0 40rpx 40rpx;
}
.user-page .bg .wrapper image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
}
.user-page .bg .username {
  height: 118rpx;
  margin-left: 30rpx;
  font-size: 40rpx;
  color: #24271e;
}
.user-page .bg .username .label {
  padding-top: 10rpx;
}
.user-page .part {
  border: 1px solid #f5f5f5;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
}
.user-page .my-switch {
  vertical-align: middle;
  margin-left: 20rpx;
}
