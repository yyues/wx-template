.nav-title {
  color: white;
  letter-spacing: 4rpx;
}
.user-page {
  height: 100vh;
}
.user-page .bg {
  width: 100%;
  height: 400rpx;
  background-color: rgba(91, 103, 202, 0.9);
  margin-top: -180rpx;
  display: flex;
  align-items: flex-end;
  padding: 0 0 40rpx 40rpx;
}
.user-page .bg .wrapper image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
}
.user-page .bg .username {
  height: 118rpx;
  margin-left: 30rpx;
  font-size: 40rpx;
  color: #24271E;
}
.user-page .bg .username .label {
  padding-top: 10rpx;
}
.user-page .action-wrapper {
  padding: 20rpx 24rpx;
  background-color: #f5f5f5;
}
.user-page .extal {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-page .extal image {
  height: 32px;
  width: 32px;
}
.user-page .extal text {
  display: block;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 25rpx;
  color: #475569;
  letter-spacing: 0.7px;
}
