.user-page {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
  z-index: 10;
}
.user-page .user-bg {
  width: 100%;
}
.user-page .user-bg image {
  width: 100%;
  height: 1348rpx;
}
.user-page .content {
  position: absolute;
  width: calc(100% - 10rpx * 4);
  min-height: 1000rpx;
  background-color: #fff;
  top: 1188rpx;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  z-index: 20;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.28s;
}
.user-page .content .point {
  width: 120rpx;
  height: 12rpx;
  opacity: 1;
  border-radius: 7rpx;
  background: #d8d8d8;
  margin: 10rpx 0;
}
.user-page .content .card {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}
.user-page .content .card image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 20rpx 40rpx 20rpx 20rpx;
}
.user-page .content .card .username text {
  font-size: 24px;
}
