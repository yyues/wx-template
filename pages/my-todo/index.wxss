.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page-wrapper .wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.page-wrapper .wrapper .loading {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-wrapper .wrapper .content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.page-wrapper .wrapper .content .error {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 16vh;
}
.page-wrapper .wrapper .content .error .message {
  margin-top: 10rpx;
}
.page-wrapper .wrapper .content .error .message text {
  color: #475569;
}
.page-wrapper .wrapper .content .detail {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
.page-wrapper .wrapper .content .detail .wrapper {
  height: 100%;
}
