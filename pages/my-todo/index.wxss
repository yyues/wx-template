.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page-wrapper .wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.page-wrapper .wrapper .loading {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.page-wrapper .wrapper .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}
.page-wrapper .wrapper .content .error {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 16vh;
}
.page-wrapper .wrapper .content .error image {
  width: 400rpx;
  height: 300rpx;
}
.page-wrapper .wrapper .content .error .message {
  margin-top: 10rpx;
}
.page-wrapper .wrapper .content .error .message text {
  color: #475569;
}
.page-wrapper .wrapper .content .detail {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
.page-wrapper .wrapper .content .detail .wrapper {
  height: 100%;
}
.page-wrapper .wrapper .content .add {
  position: absolute;
  right: 40rpx;
  bottom: 10vh;
  background-color: #5b67ca;
  padding: 16rpx;
  border-radius: 50%;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
}
