.page {
  min-height: 100vh;
  transition: height 0.28s;
  position: relative;
}
.page .action {
  display: flex;
  padding: 20rpx 24rpx;
  padding-bottom: 0;
  justify-content: space-between;
}
.page .action .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  aspect-ratio: 1;
  width: 64px;
}
.page .action .item image {
  width: 64rpx;
  height: 64rpx;
}
.page .action .item text {
  display: block;
  margin-top: 20rpx;
  color: #94a3b8;
  font-size: 24rpx;
  line-height: 44rpx;
  letter-spacing: 1.2px;
}
.page .action .item:hover {
  background-color: #f4f4f5;
  border-radius: 8rpx;
}
.page .today {
  margin-top: 20rpx;
  padding: 20rpx 24rpx;
  padding-top: 0;
}
.page .today .title {
  display: flex;
  align-items: center;
}
.page .today .title .content {
  color: #24271e;
  line-height: 48rpx;
  font-weight: 600;
  margin-right: 6rpx;
}
.page .today .title .week {
  font-size: 24rpx;
  color: #94a3b8;
}
.page .today .title .show {
  margin-left: 20rpx;
}
.page .today .days-wrapper {
  margin-top: 10rpx;
  background-color: #fff;
}
.page .today .days-wrapper .days {
  display: flex;
  justify-content: space-between;
}
.page .today .days-wrapper .days .day {
  text-align: center;
  padding: 10rpx;
  border-radius: 8rpx;
}
.page .today .days-wrapper .days .day .w {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
}
.page .today .days-wrapper .days .day .d {
  display: block;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.page .today .days-wrapper .days .checked {
  background-color: #7174e2;
  color: white !important;
}
.page .today .days-wrapper .days .checked .w {
  color: white !important;
}
.page .detail-wrapper {
  padding: 20rpx 24rpx;
}
.page .add {
  position: absolute;
  right: 60rpx;
  bottom: 80rpx;
}
.page .add image {
  width: 90rpx;
  height: 90rpx;
}
.page .empty .van-empty__image {
  height: 188px;
  margin-bottom: 20rpx;
}
.high-day {
  background-color: #7174e2;
  color: white;
}
.high-day .w {
  color: white;
}
