.user {
  display: flex;
  align-items: center;
}
.user image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.user .name {
  color: white;
}
.page-wrapper {
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page-wrapper .today {
  flex: 1;
  padding: 20rpx 24rpx;
}
.page-wrapper .today .header {
  margin-bottom: 20rpx;
  color: #24271e;
}
.page-wrapper .today .header text {
  color: #24271e;
}
.page-wrapper .action-wrapper {
  margin: 20rpx 0;
  min-height: 360rpx;
}
.operation-wrapper {
  padding: 20rpx 0;
  background-color: #f5f5f5;
  min-width: 100%;
}
.extal {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff00;
}
.extal image {
  height: 32px;
  width: 32px;
}
.extal text {
  display: block;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 25rpx;
  color: #475569;
}
.white-input .van-search__content {
  background-color: #fff;
}
.img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.img.spec {
  padding-top: 10rpx;
  height: 30rpx;
}
