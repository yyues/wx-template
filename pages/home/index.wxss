.user {
  display: flex;
  align-items: center;
}
.user image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.user .name {
  color: white;
}
.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.page-wrapper .today {
  flex: 1;
  padding: 20rpx 24rpx;
}
.page-wrapper .today .header {
  margin-bottom: 20rpx;
  color: #24271e;
}
.page-wrapper .today .header text {
  color: #24271e;
}
.page-wrapper .action-wrapper {
  margin: 20rpx 0;
  min-height: 360rpx;
}
.image {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -1;
}
.image .img {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  position: relative;
}
.image .img::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.46);
}
.operation-wrapper {
  display: flex;
  margin: 20rpx 24rpx;
  height: 200rpx;
  position: relative;
  align-items: center;
}
.extal {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.extal image {
  height: 32px;
  width: 32px;
}
.extal text {
  display: block;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 25rpx;
  letter-spacing: 0.8px;
  color: white;
}
.white-input .van-search__content {
  background-color: #fff;
}
.img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.img.spec {
  padding-top: 10rpx;
  height: 30rpx;
}
