.user {
  display: flex;
  align-items: center;
}
.user image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.page-wrapper {
  background-color: #fff;
}
.page-wrapper .weather {
  padding: 20rpx 24rpx;
}
.page-wrapper .weather .content {
  height: 216rpx;
  background-size: 100% 100%;
  padding: 16rpx;
  color: white;
  border-radius: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-wrapper .weather .content .left {
  padding: 16rpx;
}
.page-wrapper .weather .content .left .temp {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  font-family: "思源黑体";
}
.page-wrapper .weather .content .left .temp .num {
  font-size: 40rpx;
  line-height: 64rpx;
}
.page-wrapper .weather .content .left .city {
  font-size: 24rpx;
  line-height: 28rpx;
  letter-spacing: 2rpx;
}
.page-wrapper .weather .content .right {
  padding: 16rpx;
  text-align: right;
  font-size: 24rpx;
  line-height: 28rpx;
}
.page-wrapper .weather .content .right .icon {
  margin-bottom: 10rpx;
}
.page-wrapper .weather .content .right .icon image {
  width: 80rpx;
  height: 80rpx;
}
.page-wrapper .weather .content .right .suggestion,
.page-wrapper .weather .content .right .date {
  margin-bottom: 10rpx;
}
