.page-wrapper {
  min-height: 100vh;
}
.page-wrapper .loading {
  height: calc(100vh - 180rpx);
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-wrapper .content {
  background-color: #f5f5f5;
  height: 100vh;
}
.page-wrapper .content .header {
  margin: 20rpx 0;
  padding: 16rpx;
  background-color: #fff;
  display: flex;
}
.page-wrapper .content .header .avatar {
  margin-right: 20rpx;
}
.page-wrapper .content .header .avatar image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 6px;
}
.page-wrapper .content .header .info .up {
  margin-bottom: 10rpx;
}
.page-wrapper .content .header .info .up label {
  color: #94a3b8;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.page-wrapper .content .header .info .up text {
  color: #24271e;
  letter-spacing: 0.07px;
}
