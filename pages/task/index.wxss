.wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.wrapper .loading,
.wrapper .empty {
  flex: 1;
  display: flex;
  justify-content: center;
  padding-top: 16vh;
}
.wrapper .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}
.wrapper .content .header .total {
  padding: 40rpx 0 60rpx 0;
  background-color: #5b67ca;
  padding-left: 40rpx;
  font-family: '思源黑体';
  min-height: 88rpx;
}
.wrapper .content .header .total text {
  color: white;
  line-height: 48rpx;
}
.wrapper .content .detail {
  flex: 1;
  padding: 20rpx 24rpx;
}
.wrapper .content .add {
  background-color: #5b67ca;
  position: absolute;
  padding: 20rpx;
  border-radius: 50%;
  right: 90rpx;
  bottom: 180rpx;
}
.wrapper .my-message .van-empty__image {
  width: 198px;
  margin-bottom: 20rpx;
}
.wrapper .bg-color {
  background-color: #f2f3f5;
}
