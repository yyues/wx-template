.task-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.task-wrapper .wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.task-wrapper .wrapper .loading,
.task-wrapper .wrapper .content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.task-wrapper .wrapper .loading {
  justify-content: center;
  align-items: center;
}
.task-wrapper .wrapper .content .empty {
  margin-top: 10vh;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.task-wrapper .wrapper .content .empty image {
  width: 400rpx;
  height: 300rpx;
}
.task-wrapper .wrapper .content .empty .message {
  margin-top: 40rpx;
}
.task-wrapper .wrapper .content .empty .message text {
  font-size: 28rpx;
  color: #475569;
  line-height: 44rpx;
}
.task-wrapper .wrapper .content .detail {
  flex: 1;
  padding: 20rpx 24rpx;
  background-color: #f5f5f5;
}
