<view class="task-wrapper">
  <van-dialog id="van-dialog" />
  <!-- 导航栏 -->
  <van-nav-bar border="{{false}}" fixed placeholder="{{true}}" custom-style="background: #ffffff;" left-arrow bind:click-left="onClickLeft">
    <view slot="title" class="nav-title">{{showTime}}</view>
  </van-nav-bar>
  <calendar bind:selectDay="onSelect" class="calendar" />
  <view class="wrapper">
    <view class="loading" wx:if="{{loading}}">
      <image src="../../images/page/loading.gif"></image>
    </view>
    <view class="content" wx:else>
      <view class="empty" wx:if="{{currentDayTask.length == 0}}">
        <image src="../../images/page/empty.png"></image>
        <view class="message">
          <text>当天没有待办的数据哦！</text>
        </view>
      </view>
      <view class="detail" wx:else>
        <!-- 主要数据 -->
        <task-card wx:for="{{currentDayTask}}" wx:key="id" hasSelect="{{false}}" type="task" data="{{item}}" bindonClick="handleClick" />
      </view>
    </view>
  </view>
</view>