.wrapper {
  border-radius: 16rpx;
  background-color: #ffffff;
  padding: 16rpx;
  margin: 16rpx 0;
  position: relative;
}
.wrapper .header {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin: 10rpx 0 30rpx 0;
}
.wrapper .header .left {
  display: flex;
  align-items: center;
  position: relative;
}
.wrapper .header .left .point {
  width: 8rpx;
  height: 48rpx;
  background-color: #5b67ca;
  position: absolute;
  border-radius: 12rpx;
}
.wrapper .header .left .content {
  margin-left: 20rpx;
  width: 70vw;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.wrapper .header .left .content text {
  line-height: 48rpx;
  letter-spacing: 1rpx;
}
.wrapper .header .right .time {
  display: flex;
  align-items: flex-end;
}
.wrapper .header .right .time .start {
  letter-spacing: 2rpx;
}
.wrapper .header .right .time .start text {
  font-size: 40rpx !important;
}
.wrapper .header .right .time .am {
  margin-left: 10rpx;
}
.wrapper .header .right .time .am text {
  font-size: 24rpx;
  color: #94a3b8;
}
.wrapper .header .right .ruixin {
  background-color: #5b67ca;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 0 16rpx 0 16rpx;
  color: white;
  font-size: 24rpx;
  line-height: 28rpx;
  padding: 4rpx 16rpx;
}
.wrapper .icon {
  margin-right: 10rpx;
}
.wrapper .icon image {
  width: 60rpx;
  height: 60rpx;
}
.wrapper .action {
  margin: 40rpx 0 10rpx 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.wrapper .action .time-circle {
  display: flex;
  align-items: center;
}
.wrapper .action .time-circle image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.wrapper .action .time-circle .days {
  display: flex;
  align-items: flex-end;
}
.wrapper .action .time-circle .days .number {
  display: block;
  color: #171725;
  font-size: 32rpx;
}
.wrapper .action .time-circle .days .day {
  color: #9CA4AB;
  font-size: 28rpx;
}
.wrapper .type {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}
.wrapper .type image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.selected,
.high {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
}
