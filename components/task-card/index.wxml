<view class="wrapper margin-12 padding-10 bg-white   {{checked ? 'selected':'' }}" hover-class="high" catchtap="onClick" data-id="{{data.id}}">
  <view class="header">
    <view class="select" wx:if="{{ type === 'home' }}">
      <van-loading type="spinner" wx:if="{{ loading }}" color="#5B67CA" size="20px" />
      <block wx:else>
        <van-checkbox checked-color="#5B67CA" value="{{ isSelected }}" shape="square" bind:change="onSelect">
        </van-checkbox>
      </block>
    </view>
    <view class="left">
      <view class="content">
        <text>{{data.content || '明天准时上班！！！'}}</text>
      </view>

    </view>
    <view class="right">
      <!-- 瑞幸格式的 时间提示 -->
      <view class="ruixin" wx:if="{{type !== 'home'}}">
        {{data.execute_time === today ? '今日' : data.execute_time}}
      </view>
    </view>
  </view>
  <view class="progress" wx:if="{{data.is_multiplayer}}">
    <!-- 需要计算 他的进度条长度 等于当前完成人数/ uid 的长度 -->
  </view>
  <view class="status" wx:if="{{ type !== 'home'  }}">
    <image src="./image/finish.png" wx:if="{{data.task_status == 'finish'}}"></image>
    <image src="./image/delay.png" wx:if="{{data.task_status == 'delay'}}"></image>
    <image src="./image/no_start.png" wx:if="{{data.is_start && data.task_status == 'running' }}"></image>
    <image src="./image/running.png" wx:if="{{ !data.is_start  && data.task_status == 'running'}}"></image>
  </view>
  <view class="action">
    <!-- 左边的操作栏 -->
    <view class="left">
      <view class="level">
        <van-tag size="medium" color="#0284c7" wx:if="{{data.level == 0}}">低</van-tag>
        <van-tag size="medium" color="#6366f1" wx:if="{{data.level == 1}}">中</van-tag>
        <van-tag size="medium" color="#C464C0" wx:if="{{data.level == 2}}">高</van-tag>
        <van-tag size="medium" color="#e11d48" wx:if="{{data.level >= 3}}">紧急</van-tag>
      </view>
      <view class="type">
        <image src="{{data.create_url}}"></image>
        <view class="person" wx:if="{{!data.is_multiplayer}}">
          <view class="three-more" wx:if="{{data.invite_url.length > 2}}">
          </view>
        </view>
      </view>
    </view>
    <!-- 右边的操作 -->
    <view class="right" wx:if="{{type == 'home'}}">
      <image src="../../images/action/action.png" class="{{ show ? 'active': ''}}" catchtap="showOperation"></image>
      <view class="operation" wx:if="{{show}}">
        <view class="item" catchtap="onClock">
          <view class="image-wrapper">
            <image src="../../images/action/clock.png"></image>
          </view>
        </view>
        <view class="item" catchtap="onClock">
          <view class="image-wrapper">
            <image src="../../images/action/finish.png"></image>
          </view>
        </view>
        <view class="item" catchtap="onClock" wx:if="{{data.is_multiplayer}}">
          <view class="image-wrapper">
            <image src="../../images/action/invite.png"></image>
          </view>
        </view>
        <view class="item" catchtap="onClock">
          <view class="image-wrapper">
            <image src="../../images/action/delay_v2.png"></image>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>