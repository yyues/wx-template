<view class="wrapper margin-12 padding-10 bg-white   {{checked ? 'selected':'' }}" hover-class="high" bindtap="onClick" data-id="{{data.id}}">
  <view class="header">
    <view class="select" wx:if="{{ type === 'home' }}">
      <van-loading type="spinner" wx:if="{{ loading }}" color="#5B67CA" size="20px" />
      <block wx:else>
        <van-checkbox checked-color="#5B67CA" value="{{ isSelected }}" shape="square" bind:change="onSelect">
        </van-checkbox>
      </block>
    </view>
    <view class="left">
      <view class="content">
        <text>{{data.content || '明天准时上班！！！'}}</text>
      </view>

    </view>
    <view class="right">

      <!-- 瑞幸格式的 时间提示 -->
      <view class="ruixin" wx:if="{{type !== 'home'}}">
        {{data.execute_time || '2022-10-28'}}
      </view>
    </view>
  </view>
  <view class="progress" wx:if="{{data.is_multiplayer}}">
    <!-- 需要计算 他的进度条长度 等于当前完成人数/ uid 的长度 -->
  </view>

  <view class="action">
    <view class="time-circle">
      <van-icon name="clock-o" size="20px" />
      <view class="days">
        <text class="number">{{data.task_cycle || '7'}}</text>
        <text class="day"> 天</text>
      </view>
    </view>
    <view class="type">
      <image src="{{data.create_url}}"></image>
      <view class="person" wx:if="{{!data.is_multiplayer}}">
        <view class="three-more" wx:if="{{data.invite_url.length > 2}}">
        </view>
      </view>
    </view>
  </view>
</view>