<view class="wrapper {{checked ? 'selected':'' }}" hover-class="high">
  <!-- 左中右布局， 参照 网易云样式，不再使用 card 样式 -->
  <view class="index">
    <text>{{index}}</text>
  </view>
  <view class="img">
    <image src="{{data.avatar_url}}" alt="" />
  </view>
  <view class="content-wrapper" bindtap="onDetail">
    <view class="name">
      <text>{{data.name}}</text>
    </view>
    <view class="content van-multi-ellipsis--l2">
      <text>{{data.content}}</text>
    </view>
    <view class="labels">
      <!-- 标签， -->
      <van-tag plain wx:if="{{data.status == 're_publish'}}" color="#7A64C1">待发布</van-tag>
    </view>
  </view>
  <!-- 操作栏  -->
  <view class="action" wx:if="{{hasAction && data.is_current_user}}" catchtap="onClick">
    <image src="../../images/action/ellipsis-v.png"></image>
  </view>
</view>